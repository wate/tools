{
  "variables": {
    "version_major": "7",
    "version_minor": "4",
    "version_build": "1708",
    "iso_checksum_type": "sha256",
    "iso_checksum": "fe3d960cce4d2c1c9f1b66817fe87cc0ee1a1c6c5dd126204cb5c33d51a45620"
  },
  "builders": [{
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
    ],
    "boot_wait": "10s",
    "disk_size": 20480,
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_os_type": "RedHat_64",
    "hard_drive_interface": "sata",
    "http_directory": "http",
    "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/CentOS/{{user `version_major`}}/isos/x86_64/CentOS-{{user `version_major`}}-x86_64-NetInstall-{{user `version_build`}}.iso",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",
    "type": "virtualbox-iso",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],
    "virtualbox_version_file": ".vbox_version"
  }],
  "provisioners": [{
    "type": "shell",
    "pause_before": "10s",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'",
    "scripts": [
      "scripts/01-base.sh",
      "scripts/02-vagrant.sh",
      "scripts/03-virtualbox.sh",
      "scripts/04-kickstart.sh",
      "scripts/90-cleanup.sh",
      "scripts/99-minimize.sh"
    ]
  }],
  "post-processors": [
    [{
      "type": "vagrant",
      "output": "centos7.box"
    }]
  ]
}